{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "functions": {
    "src/**/*.ts": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*).(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/admin",
      "destination": "/Admin",
      "permanent": false
    },
    {
      "source": "/patients",
      "destination": "/Patients",
      "permanent": false
    },
    {
      "source": "/sessions",
      "destination": "/Sessions",
      "permanent": false
    },
    {
      "source": "/reports",
      "destination": "/Reports",
      "permanent": false
    },
    {
      "source": "/finance",
      "destination": "/Finance",
      "permanent": false
    },
    {
      "source": "/rooms",
      "destination": "/Rooms",
      "permanent": false
    },
    {
      "source": "/ai-treatment",
      "destination": "/AITreatment",
      "permanent": false
    },
    {
      "source": "/advanced-ai",
      "destination": "/AdvancedAITreatment",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "VITE_SUPABASE_URL": "@vite_supabase_url",
    "VITE_SUPABASE_ANON_KEY": "@vite_supabase_anon_key",
    "VITE_OPENAI_API_KEY": "@vite_openai_api_key"
  }
} 